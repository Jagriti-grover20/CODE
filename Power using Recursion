//https://practice.geeksforgeeks.org/problems/power-using-recursion/1/?track=DSASP-Recursion&batchId=154
class Solution{
  public:
    //Complete this function
    int RecursivePower(int n,int p)
    {
        //Your code here
        if(p==0)
        {
            return 1;
        }
        return n*RecursivePower(n,p-1);
    }
};
