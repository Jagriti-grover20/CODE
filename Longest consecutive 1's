//MICROSOFT

//If any modificaion is to be done on the no itself then you must use shifting operators
//brain algo is not going to help out

class Solution
{
    public:
    int maxConsecutiveOnes(int N)
    {
        int counter=0;
        // code here
         while(N>0)
         {
             N=(N>>1)&N;
             counter++;
         }
            return counter;
        }
};
